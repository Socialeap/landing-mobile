    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // --- Hamburger Menu Logic ---
            const hamburgerBtn = document.getElementById('hamburger-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            const menuOverlay = document.getElementById('menu-overlay');
            const navLinks = document.querySelectorAll('.nav-link');

            function toggleMenu() {
                const isOpen = mobileMenu.classList.contains('is-open');
                mobileMenu.classList.toggle('is-open');
                
                if (!isOpen) {
                    menuOverlay.classList.remove('pointer-events-none');
                    menuOverlay.classList.add('opacity-100');
                    document.body.classList.add('body-no-scroll');
                } else {
                    menuOverlay.classList.add('pointer-events-none');
                    menuOverlay.classList.remove('opacity-100');
                    document.body.classList.remove('body-no-scroll');
                }
            }

            hamburgerBtn.addEventListener('click', toggleMenu);
            menuOverlay.addEventListener('click', toggleMenu);
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (mobileMenu.classList.contains('is-open')) {
                        toggleMenu();
                    }
                });
            });

            // --- Flipping Card Logic ---
            const flipCards = document.querySelectorAll('.flip-card');
            
            flipCards.forEach(card => {
                const flipAction = () => {
                    // Check if this card is already flipped
                    const isFlipped = card.classList.contains('is-flipped');
                    
                    // Close all other cards
                    flipCards.forEach(otherCard => {
                        otherCard.classList.remove('is-flipped');
                        // Reset content height for smooth transition when re-opening
                        const flipper = otherCard.querySelector('.flipper');
                        const back = otherCard.querySelector('.card-back');
                        flipper.style.minHeight = '80px';
                    });
                    
                    // If the card was not already flipped, flip it now
                    if (!isFlipped) {
                        card.classList.add('is-flipped');
                        // Adjust the height of the flipper to match the back content
                        const flipper = card.querySelector('.flipper');
                        const back = card.querySelector('.card-back');
                        // Use scrollHeight to get the full content height
                        const backHeight = back.scrollHeight > 80 ? back.scrollHeight + 40 : 80;
                        flipper.style.minHeight = `${backHeight}px`;
                    }
                };

                card.addEventListener('click', flipAction);
                card.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        flipAction();
                    }
                });
            });
        });
    </script>
